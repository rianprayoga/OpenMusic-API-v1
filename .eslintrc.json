{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {        
        "no-console": "off",
        "no-underscore-dangle":  [
            "error", { "allow": [
                "_db",
                "_service",
                "_validator",
                "_userService",
                "_authService",
                "_tokenManager",
                "_playlistService",
                "_songService",
                "_authorizationService",
                "_auditService",
                "_collabsService",
                "_producerServices",
                "_folder",
                "_storageService",
                "_S3",
                "_data",
                "_client",
                "_cacheService",
                "_likeService"
                ] }
        ],
        "camelcase": "off"
    }
}
